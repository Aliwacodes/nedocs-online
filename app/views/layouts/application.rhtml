<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Strict//EN">
<html>
  <head>
    <title><%= session[:hospital_name] || '' %> <%= @page_title || '' %></title>
    <%= javascript_include_tag :defaults %>
    <% for js in [].concat(@javascripts || []).compact -%>
      <%= javascript_include_tag js %>
    <% end -%>		
    <% for stylesheet in [ 'default', 'nedocs' ].concat(@stylesheets || []).compact -%>
      <%= stylesheet_link_tag stylesheet %>
    <% end -%>
  </head>
  
  <body<%= @onload ? " onload=\"#{@onload}\"" : '' %><%= @onkeypress ? " onkeypress=\"#{@onkeypress}\"" : '' %>>

	<table cellpadding="0" cellspacing="0" border="1" width="900" align="center" bgcolor="#ffffff" style="margin-left:auto; margin-right:auto;">
      <tr class="noprint">
        <td style="padding: 12px;">
          <span id="institutionHeader"><%= render :partial => '/shared/logo' %></span>
        </td>
        <td width="305" style="padding: 12px 12px 6px 0px; text-align: right" align="right">
					<%- if is_logged_in_user? -%>
            <%= render 'shared/navigation' %>
          <%- end -%>
          
        </td>
      </tr>
      <tr class="noprint">
        <td colspan="2"><img src="/images/interface/divider.gif" width="900" height="20" style="float:left;" /></td>
      </tr>
      <tr>
        <td colspan="2" bgcolor="#cccccc">
		            <div id="mainContent">
		              <%= yield %>
		              <br clear="all" />
		            </div>
		            <img src="/images/interface/bottom.gif" width="900" height="5" style="float:left;" class="noprint" />
		          </td>
		        </tr>

		        <tr class="footer">
		          <td class="footer">
								&nbsp;
		          </td>
		          <td class="footer" align="right">
		            powered by NedocsOnline
		          </td>
		        </tr>
    </table>

  </body>
</html>