<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Strict//EN">
<html>
  <head>
    <title><%= session[:hospital_name] || '' %> <%= @page_title || '' %></title>
    <%= javascript_include_tag :defaults %>
    <% for js in [].concat(@javascripts || []).compact -%>
      <%= javascript_include_tag js %>
    <% end -%>
    <% for stylesheet in [ 'default', 'nedocs' ].concat(@stylesheets || []).compact -%>
      <%= stylesheet_link_tag stylesheet %>
    <% end -%>
  </head>
  
  <body<%= @onload ? " onload=\"#{@onload}\"" : '' %><%= @onkeypress ? " onkeypress=\"#{@onkeypress}\"" : '' %>>
        <div id='institutionHeader' style='text-align: center; margin: 0 auto; width: 900px; padding-top: 30px; padding-bottom: 40px; background-color: #cccccc'>
					<%= render :partial => '/shared/logo' %><br/>NEDOCS System
				</div>
      	<div style="margin: 0 auto; width: 900px">
				<table cellpadding="0" cellspacing="0" border="0" width="900" align="center" bgcolor="#cccccc">
        <tr>
            <td>
                <div id='mainContent'>
                    <%= yield %>
                </div>
            </td>
        </tr>
      </table>
			</div>
  </body>
</html>